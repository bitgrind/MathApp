<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kstedman.mathapplication.MainActivity">

    <ImageView
        android:id="@+id/bgView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/mathbg" />

    <Button
        android:id="@+id/solveEquationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Solution!"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="149dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/inputEquation"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/inputEquation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Input Equation"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_marginTop="72dp" />

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="#ddffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="SOLVR"
        android:textAlignment="center" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="98sp"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_toRightOf="@+id/convertButton"
        android:layout_toEndOf="@+id/convertButton"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/convertButton"
        android:layout_width="98sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputEquation"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/inputEquation"
        android:text="Convert" />

    <Button
        android:id="@+id/solveButton"
        android:layout_width="98sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/convertButton"
        android:layout_toStartOf="@+id/convertButton"
        android:text="Solvr" />

    <Button
        android:id="@+id/contactButton"
        android:layout_width="98sp"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:layout_alignTop="@+id/aboutButton"
        android:layout_toRightOf="@+id/aboutButton"
        android:layout_toEndOf="@+id/aboutButton" />

</RelativeLayout>
